# Prompt Configuration & Web Search Settings
# Copy this file to .env and customize as needed

# ===== Web Search Configuration =====
# Master switch for web search functionality
ENABLE_WEB_SEARCH=false

# Model to use when web search is enabled (requires Responses API support)
WEB_SEARCH_MODEL=gpt-4o

# Per-analyzer web search toggles
SUMMARIZER_WEB_SEARCH=false          # Summary usually doesn't need current data
CLASSIFIER_WEB_SEARCH=false          # Classification based on content itself
INSIGHTS_WEB_SEARCH=true            # Benefits from current market/tech context
TECHNICAL_ANALYZER_WEB_SEARCH=true   # Need latest versions/CVEs
MARKET_ANALYZER_WEB_SEARCH=true      # Essential for market data
LEGAL_ANALYZER_WEB_SEARCH=false      # Laws don't change that quickly

# ===== Analyzer Feature Flags =====
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_MARKET_ANALYSIS=false
ENABLE_LEGAL_ANALYSIS=false

# ===== Model Configuration =====
# Models for each analyzer (existing settings)
MODEL_SUMMARY=gpt-4o-mini
MODEL_CLASSIFIER=gpt-4o-mini
MODEL_INSIGHTS=gpt-4o

# ===== Performance Tuning =====
# Maximum web search queries per document
MAX_WEB_SEARCHES_PER_DOC=2

# Cache web search results (minutes)
WEB_SEARCH_CACHE_TTL=15

# Timeout for web search API calls (seconds)
WEB_SEARCH_TIMEOUT=10

# ===== Cost Controls =====
# Daily limit for web search queries (0 = unlimited)
DAILY_WEB_SEARCH_LIMIT=1000

# Alert threshold for web search costs (USD)
WEB_SEARCH_COST_ALERT_THRESHOLD=50

# ===== Content-Type Detection =====
# Keywords to help identify content types (comma-separated)
RESEARCH_PAPER_KEYWORDS=abstract,methodology,references,doi
MARKET_NEWS_KEYWORDS=revenue,earnings,market share,competitor
TECHNICAL_DOC_KEYWORDS=api,implementation,configuration,install

# ===== Prompt Customization =====
# Path to custom prompts file (optional)
CUSTOM_PROMPTS_PATH=config/prompts.yaml

# Override specific prompts (optional)
# PROMPT_OVERRIDE_SUMMARIZER_RESEARCH_PAPER="Custom prompt for research papers..."
# PROMPT_OVERRIDE_INSIGHTS_MARKET_NEWS="Custom prompt for market insights..."

# ===== Monitoring & Logging =====
# Log web search decisions (debug mode)
LOG_WEB_SEARCH_DECISIONS=true

# Send metrics to monitoring service
ENABLE_METRICS_REPORTING=true
METRICS_ENDPOINT=https://metrics.example.com/api/v1