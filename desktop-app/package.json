{
  "name": "knowledge-pipeline-desktop",
  "version": "0.1.0",
  "description": "Desktop application for Knowledge Pipeline - AI-powered research automation",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "start:headless": "xvfb-run --auto-servernum --server-args='-screen 0 1024x768x24' electron-forge start",
    "start:virtual": "DISPLAY=:99 electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "test:headless": "node scripts/test-headless.js",
    "test:gui": "xvfb-run --auto-servernum npm test",
    "compile": "electron-forge compile",
    "dev:setup": "./scripts/setup-virtual-display.sh",
    "dev:codespace": "npm run dev:setup && npm run start:headless"
  },
  "keywords": [
    "knowledge-pipeline",
    "research-automation",
    "notion",
    "ai"
  ],
  "author": "Knowledge Pipeline Team",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/three": "^0.160.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "jest": "^29.7.0",
    "node-loader": "^2.0.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack-cli": "^6.0.1",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.2",
    "@mui/material": "^5.15.2",
    "@mui/x-date-pickers": "^8.9.2",
    "@notionhq/client": "^4.0.1",
    "@react-spring/three": "^10.0.1",
    "@react-spring/web": "^10.0.1",
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.0",
    "@react-three/postprocessing": "^2.15.0",
    "@types/react-window": "^1.8.8",
    "@use-gesture/react": "^10.3.1",
    "d3-force": "^3.0.0",
    "dagre": "^0.8.5",
    "date-fns": "^4.1.0",
    "electron-log": "^5.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^12.23.12",
    "googleapis": "^154.1.0",
    "immer": "^10.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.4",
    "react-router-dom": "^6.21.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "three": "^0.160.0",
    "zustand": "^5.0.7"
  },
  "build": {
    "appId": "com.knowledgepipeline.desktop",
    "productName": "Knowledge Pipeline",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    }
  }
}
